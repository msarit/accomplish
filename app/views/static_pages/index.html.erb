<section class="todoapp">
  <header class="header">
    <h1>Get It Done!</h1>
  </header>

  <section class="main">
    <ul class="todo-list">
      
    </ul>
  </section>
</section>

<script>
  $(function() {
    $.get("/tasks").success( function( data ) {
      
      var htmlString = "";

      $.each(data, function (index,task) {
        var checkedStatus = task.done ? "checked" : "";
        var liElement = '<li><div class="view"><input class="toggle" type="checkbox"' + checkedStatus + '><label>' + task.title +
        '</label></div></li>';
        htmlString += liElement;
      });

      var ulTodos = $('.todo-list');

      ulTodos.html(htmlString);
    
    });
  });
</script>


<!-- First initiate an HTTP GET request to "/tasks" -->
<!-- Next, call "success" method on the object returned by "$.get" -->
<!-- This allows us to trigger code in a callback when a successful response happens -->
<!-- Pass through the code we want to trigger upon a successful HTTP response -->
<!-- The argument "data" has access to the result of the HTTP response -->